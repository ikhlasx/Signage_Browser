{
  "name": "signage-windows",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --win",
    "build": "electron-builder --win --publish never"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.signage.windows",
    "productName": "Signage Windows",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true
    },
    "files": [
      "main.js",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "config.json",
        "to": "."
      }
    ],
    "asarUnpack": []
  }
}
